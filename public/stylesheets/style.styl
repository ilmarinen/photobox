@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 50px 10px
  color #fff
  font-size 25px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.thumbnail_widget
  border-radius 3px
  border 1px solid #ccc
  margin-left 20px
  background-color #ffffff
  box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)
  a
    text-decoration none

.edit_widget
    font-size 10px
    display-inline block

.main_widget
  border-radius 3px
  border 1px solid #ccc
  margin-left 20px
  background-color background-color
  box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

  h1
    font-family 'Quicksand'
    margin 13px 10px 4px
    padding-bottom 10px
    border-bottom 1px dotted #ddd
    border-radius 2px 2px 0px 0px     
    margin-bottom 10px

  p
    font-size 17px
    padding 0px 10px
    margin-bottom 10px

  form
    font-size 13px
    padding 0px 10px
    margin-bottom 10px

    fieldset
      margin 5px 0 0 0
      padding 0 0 0 0


    label
      margin 5px 0 0 0
      font-size 13px
      width 65px
      display inline-block
      text-align right
      padding-right 5px

  a
    text-decoration none
    color #444

  ul
    font-size 15px
    padding 0px 10px
    margin-bottom 10px
    list-style-type none

    li
      padding-left 0px



.container
  width 500px
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 300px

  p
    margin-bottom 20px

  ul
    list-style-type none

    form
      font-size 13px
      padding 0px 10px
      margin-bottom 10px



.sidebar
  float left
  width 200px

  .sidebar_widget
    border-radius 3px
    border 1px solid #ccc
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

    form
      font-size 13px
      padding 0px 0px
      margin-bottom 0px

      fieldset
        margin 0 0 0 0
        padding 0 0 0 0

      label
        margin 5px 0 0 0
        font-size 13px
        display inline-block
        padding-left 2px

      ul
        font-size 15px
        padding 0px 10px
        margin-bottom 10px
        list-style-type none

        li
          padding-left 0px

    ul
      font-size 15px
      padding 0px 10px
      margin-bottom 10px
      list-style-type none

      li
        padding-left 0px

    a
      text-decoration none
      color #444


p
  line-height 1.8

footer
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px

