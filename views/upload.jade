extends layout

block content
  p
    form(action='/picture/new', method='post', enctype='multipart/form-data')
      ul
        li
          label Title
          input(type="text", name="photoTitle")

        li
          label Photo
          input(type="file", name="photoImage")

        li
          input(type='submit', value='Upload')

block sidebar
  .widget
    h1 Menu
    p
      ul
        li
          a(href='/home') Home

        li
          a(href='/picture/new') New Photo

        li
          a(href='/picture') Browse Photos

        li
          a(href='/logout') Logout
